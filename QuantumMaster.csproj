    </Reference>
    <Reference Include="GameData.Common">
      <HintPath>$(TaiwuPath)\Backend\GameData.Common.dll</HintPath>
    </Reference>
    <Reference Include="GameData.Common.Algorithm">
      <HintPath>$(TaiwuPath)\Backend\GameData.Common.Algorithm.dll</HintPath>
    </Reference>
    <Reference Include="GameData.GameDataBridge">
